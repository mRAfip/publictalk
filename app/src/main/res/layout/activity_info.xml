<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileInfo">


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_round_arrow_back_24"
        android:id="@+id/back_btn_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/back_btn_info"
        android:id="@+id/info_page_head"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
       />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_layout_backgroud"
        android:layout_below="@id/info_page_head"
        android:layout_marginTop="30dp"
        android:id="@+id/info_name_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="First name"
            android:layout_alignParentTop="true"
            android:id="@+id/first_name_txt"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_hint"
            android:layout_below="@+id/first_name_txt"
            android:id="@+id/info_hr_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Last name"
            android:layout_alignParentBottom="true"
            android:id="@+id/last_name"
            android:layout_below="@+id/info_hr_name"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/info_name_layout"
        android:text="Make sure it matches the name on your government ID"
        android:textSize="14dp"
        android:id="@+id/info_sub_txt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_layout_backgroud"
        android:layout_below="@id/info_sub_txt"
        android:layout_marginTop="30dp"
        android:id="@+id/info_email_layout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Email"
            android:layout_alignParentTop="true"
            android:id="@+id/email_txt_signup"
            android:layout_marginLeft="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_hint"
            android:layout_below="@+id/email_txt_signup"
            android:id="@+id/info_hr_email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Password"
            android:layout_alignParentBottom="true"
            android:id="@+id/password_signup"
            android:layout_below="@+id/info_hr_email"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/info_email_layout"
        android:text="We'll email your personal suggestions and tips"
        android:textSize="14dp"
        android:id="@+id/info_sub_txt_2"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_layout_backgroud"
        android:layout_below="@id/info_sub_txt_2"
        android:layout_marginTop="30dp"
        android:id="@+id/phone_layout_txt">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Phone number"
            android:layout_alignParentTop="true"
            android:id="@+id/phone_txt_signup"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <com.karacce.buttom.Buttom
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        app:buttom_type="gradient"
        app:buttom_gradient_type="linear"
        app:buttom_gradient_orientation="left_right"
        app:buttom_gradient_start_color="@color/purple_700"
        app:buttom_gradient_end_color="@color/purple_700"
        app:buttom_corner_radius="12dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_below="@+id/phone_layout_txt"
        android:id="@+id/compleat_info"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/compleat_info"
        android:text="We'll send you members only deals, inspirations, marketing emails, and push notifications."
        android:textSize="14dp"
        android:id="@+id/info_sub_txt_4"/>








</RelativeLayout>