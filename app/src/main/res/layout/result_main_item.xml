<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content_area_layout"
        android:background="@drawable/item_layout_backgroud"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/item_layout_head"
            android:background="@drawable/white_grey_border_bottom">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MHD_RAFI"
                android:id="@+id/talker_user_name"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:textAllCaps="true"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/item_profile_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="social media"
                android:id="@+id/category_head"
                android:textSize="8dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/talker_user_name"
                android:layout_toRightOf="@+id/item_profile_image"/>



        </RelativeLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_head"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="without relying on meaningful
                  content. Lorem ipsum may be used as a placeholder before final copy is available."
            android:textSize="18dp"
            android:letterSpacing="0.15"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/item_layout_head"
            />



    </RelativeLayout>



</RelativeLayout>